<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/maxImageBgColor"
                android:clipToPadding="true"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/maxP_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <com.as.xiajue.picturebing.view.custom.DateTranBackTextView
            android:id="@+id/maxP_dateTextV"
            style="@style/date_textView_style"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            app:backColor="@color/homeItemTextBack"
            app:dateText="公元某某年"
            app:dateTextLeft="true"
            app:dateTextSize="12sp"/>
    </RelativeLayout>

    <include layout="@layout/max_toolbar"/>

</RelativeLayout>