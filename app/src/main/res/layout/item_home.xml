<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/item_home_iv"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/item_image_drawable"/>

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/item_home_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            app:progress_background_color="@color/progress_background"
            app:progress_end_color="@color/progress_color"
            app:progress_start_color="@color/progress_color"
            app:progress_text_color="#1E90FF"
            app:style="solid"/>

        <com.as.xiajue.picturebing.view.custom.DateTranBackTextView
            android:id="@+id/item_home_tv"
            style="@style/date_textView_style"
            app:backColor="@color/homeItemTextBack"
            app:dateText="公元某某年"
            app:dateTextLeft="true"
            app:dateTextSize="10sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>